####################################################################
# The 'Makefile' of TSITO AI Engine.
#
####################################################################

# The name of the App.
LIBRARY = AI_TSITO

# Common flags
CXX         = g++-4.0

CXXFLAGS = -fPIC -Wall -I../common
DEBUGFLAGS  = -g

# The main source
MAIN_SRC := \
	AI_TSITO.cpp \
	Evaluator.cpp \
	Move.cpp \
	Options.cpp \
	Transposition.cpp \
	Board.cpp \
	Lawyer.cpp \
	OpeningBook.cpp \
	Timer.cpp \
	tsiEngine.cpp

# Define our sources and object files
SOURCES := \
	$(MAIN_SRC)

OBJECTS := $(SOURCES:.cpp=.o)

.cpp.o :
	$(CXX) $(CXXFLAGS) $(DEBUGFLAGS) -c -o $@ $<

all: $(LIBRARY)
	cp -v AI_TSITO.dylib ../

$(LIBRARY): $(OBJECTS)
	$(CXX) -dynamiclib -Wl,-install_name,$(LIBRARY).dylib -o $(LIBRARY).dylib $(OBJECTS)

clean:
	rm -vrf $(LIBRARY).dylib *.o

############## END OF FILE ###############################################

